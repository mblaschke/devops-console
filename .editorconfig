# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.conf]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4
